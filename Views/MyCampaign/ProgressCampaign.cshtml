@model CampaignViewModel

@{
    ViewData["Title"] = "Accept";
    var commision = "";
    if(Model.Commission != null)
    {
        commision = String.Format("{0:n0}", Model.Commission);
    }
}
<input id="initCampaignId" class="d-none" value="@Model.CampaignId"/>
<input id="initCommision" class="d-none" value="@Model.Commission"/>
<div class="container homeClientContent">
   <span class="landingTitle d-flex justify-content-center">Progress</span>
    <div class="form-row justify-content-center">
        <div class="col-md-12">
            <div id="participantTableContainer" class="overflow-hidden h-100">
                <table id="participantTable" @*class="table table-striped table-bordered w-100 table-sm table-hover"*@>
                </table>
            </div>
        </div>
    </div>
    <div class="form-row justify-content-center">
        <div class="col-md-4 mt-4">
            <button id="btnDone" name="submit" type="submit" value="submit" data-toggle="modal" data-target="#modalValidationDone" class="w-100 btn btn-lg btn-primary bgColor">Close Campaign</button>
        </div>
    </div>
</div>

<div class="modal fade" id="modalValidationDone" tabindex="-1" role="dialog" aria-labelledby="modalValidationDone" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Close Campaign</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body d-none" id="withoutWithdrawl">
                <center>
                    <label class="font-weight-bold">Are You Sure Want to Close the Campaign?</label>
                </center>
            </div>

            <div class="modal-body d-none" id="withdrawl">
                <div class="container-fluid">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group mb-3">
                                <h4 id="accountBalance"></h4>
                            </div>
                            <hr />
                            <div class="form-group mb-3">
                                <h5>Withdraw Method</h5>
                                <select id="paymentMethod" class="form-control">
                                    <option value="">BCA</option>
                                    <option value="">BNI</option>
                                    <option value="">BRI</option>
                                    <option value="">BTN</option>
                                    <option value="">Mandiri</option>
                                    <option value="">Mega</option>
                                </select>
                            </div>
                            <div class="form-group mb-3">
                                <h5>Bank Account Number</h5>
                                <input id="bankAccountNumber" class="form-control" aria-required="true" type="number" required/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeButton">Cancel</button>
                <button type="button" class="btn btn-primary" id="submitButton">Yes</button>
                <button type="button" class="btn btn-primary" id="submitCloseButton">Yes</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/Progress.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
    <script src="//cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js" asp-append-version="true"></script>
}