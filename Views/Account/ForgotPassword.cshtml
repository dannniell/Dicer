@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Lupa Password";
}

<div class="container forgetContent">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form id="registerForm" method="post">
                <span class="landingTitle">Forget Password</span>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <hr/>
                <button name="submit" type="submit" value="submit" class="w-100 btn btn-lg btn-primary bgColor">Submit</button>
                <div class="d-flex justify-content-center my-2">
                    Already have account?&nbsp;<a asp-action="index" asp-controller="Landing" >Sign In</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}