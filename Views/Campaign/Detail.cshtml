        <div class="col-md-3 mx-1">
            <a asp-action="Edit" class="w-100 btn btn-lg btn-primary bgColor">Cancel</a>
        </div>
        <div class="col-md-3 mx-1">
            <button name="submit" type="submit" value="submit" class="w-100 btn btn-lg btn-primary bgColor">Update</button>
        </div>
    </div>*@
</div>
@section Scripts {
    <script src="~/js/DetailClientCampaign.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
     <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
}