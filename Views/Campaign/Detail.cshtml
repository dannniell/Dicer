@model CampaignViewModel
@inject UserManager<ApplicationUser> userManager;

@{
    var user = await userManager.GetUserAsync(User);
    ViewData["Title"] = "Create Campaign";
    var photoPath = "~/Img/Campaign/" + (ViewData["Img"] ?? "noimage.jpg");
}
<input id="InitProvinsi" value= "@ViewData["Provinsi"]"/>
<input id="InitKota" value="@ViewData["Kota"]"/>

<div class="container profileCreatorContent">
    <div class="form-row justify-content-center">
        <div class="col-md-10">
            <span class="landingTitle">Campaign Details</span>
        </div>
        <div class="col-md-2 d-inline-flex flex-row-reverse h-100 mt-4">
            @if (User.IsInRole("Client"))
            {
                <a asp-action="Edit" asp-route-id=@Model.CampaignId class="btn btn-sm btn-primary createBtn">Edit</a>
                <a asp-action="Edit" asp-route-id=@Model.CampaignId class="btn btn-sm btn-primary createBtn mr-2">Accept</a>
            }
            @if (User.IsInRole("Creator"))
            {
                <a asp-action="Register" asp-route-id=@Model.CampaignId class="btn btn-sm btn-primary createBtn mr-2">Apply</a>
            }
        </div>
    </div>
    <hr />
    <div class="form-row justify-content-around">
        <div class="col-md-4">
            <div class="form-group mb-3">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true"/>
            </div>
            <hr />
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                <h2 class="font-weight-bold">@Model.CampaignName</h2>
            </div>
            <hr />
            <div class="form-group mb-3">
                <div class="form-row justify-content-center">
                    <div class="col-md-6">
                        <h3>@Model.ClientName</h3>
                    </div>
                    <div class="col-md-6 d-inline-flex flex-row-reverse h-100">
                        <a class="font-weight-bold typeBtn">@Model.ContentType</a>
                    </div>
                </div>
            </div>
           <div class="form-group mb-3">
                 <h2 class="detailPrice">Rp. @Model.Commission</h2>
            </div>
            <div class="form-group mb-3">
                <h4 class="font-weight-bold">Campaign Description</h4>
            </div>
            <div class="form-group mb-3">
                <p>@Model.Description</p>
            </div>
            <div class="form-group mb-3">
                <h4 class="font-weight-bold">Requirements</h4>
            </div>
            <div class="form-group mb-3">
                <ul>
                    <li>Gender: @Model.Gender</li>
                    <li>Provinsi: @ViewData["Provinsi"]</li>
                    <li>Kota: @ViewData["Kota"]</li>
                    <li>Age: @Model.MinAge - @Model.MaxAge years old</li>
                </ul>
            </div>
            <div class="form-group mb-3">
                <h4 class="font-weight-bold">Detail Task</h4>
            </div>
            <div class="form-group mb-3">
                <p>@Model.Task</p>
            </div>
        </div>
    </div>
    <hr/>
