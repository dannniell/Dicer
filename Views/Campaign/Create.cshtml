@model CampaignViewModel

@{
    ViewData["Title"] = "Create Campaign";
    var photoPath = "~/Img/Campaign/Default.jpg";
}

<div class="container profileCreatorContent">
    <form enctype="multipart/form-data" asp-action="Create" asp-controller="Campaign" method="post">
    <span class="landingTitle d-flex justify-content-center">Create Campaign</span>
    <hr />
    <div class="form-row justify-content-around">
        <div class="col-md-3">
            <div class="form-group mb-3">
                    <img class="card-img-top" id="ImgPlaceholder" src="@photoPath" asp-append-version="true"/>
                    <div class="form-label">
                        <input asp-for="CampaignImg" id="inputImg" type="file" accept=".jpg,.png,.jpeg" class="form-control" />
                    </div>
                    <span asp-validation-for="CampaignImg" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="CampaignName"></label>
                <input asp-for="CampaignName" class="form-control" aria-required="true" />
                <span asp-validation-for="CampaignName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ContentType"></label>
                <select asp-for="ContentType" id="ddlContentType" class="form-control">
                    <option value="IG Feed">IG Feed</option>
                    <option value="IG Story">IG Story</option>
                    <option value="IG Reels">IG Reels</option>
                </select>
                <span asp-validation-for="ContentType" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Genre"></label>
                <select asp-for="Genre" id="ddlGenre" class="form-control">
                    <option value="Sport">Sport</option>
                    <option value="Food">Food</option>
                    <option value="FnB">Fashion & Beauty</option>
                    <option value="Technology">Technology</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Education">Education</option>
                    <option value="Another">Another</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="1" cols="1" class="form-control" aria-required="true" ></textarea>
                <span asp-validation-for="CampaignName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Commission"></label>
                <input asp-for="Commission" class="form-control" aria-required="true" />
                <span asp-validation-for="Commission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task"></label>
                <textarea asp-for="Task" rows="1" cols="1" class="form-control" aria-required="true" ></textarea>
                <span asp-validation-for="Task" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" id="ddlgender" class="form-control">
                    <option value="">Not Selected</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Provinsi" class="control-label">Province</label>
                <select asp-for="Provinsi" id="ddlprovinsi" class="form-control"></select>
                <span asp-validation-for="Provinsi" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Kota" class="control-label">City</label>
                <select asp-for="Kota" id="ddlkota" class="form-control"></select>
                <span asp-validation-for="Kota" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MinFollowers"></label>
                <input asp-for="MinFollowers" class="form-control" aria-required="true" />
                <span asp-validation-for="MinFollowers" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MinAge"></label>
                <input asp-for="MinAge" class="form-control" aria-required="true" />
                <span asp-validation-for="MinAge" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MaxAge"></label>
                <input asp-for="MaxAge" class="form-control" aria-required="true" />
                <span asp-validation-for="MaxAge" class="text-danger"></span>
            </div>
        </div>
    </div>
    <hr/>
    <div class="form-row justify-content-center">
        <div class="col-md-4">
            <button name="submit" type="submit" value="submit" class="w-100 btn btn-lg btn-primary bgColor">Create</button>
        </div>
    </div>
    </form>
</div>
@section Scripts {
    <script src="~/js/ImagePreview.js" asp-append-version="true"></script>
    <script src="~/js/listProvinsiKotaCampaign.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
     <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
}