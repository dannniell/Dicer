@inject SignInManager<ApplicationUser> signInManager;
@inject RoleManager<IdentityRole> roleManager;
@inject UserManager<ApplicationUser> userManager;

@{
    var user = await userManager.GetUserAsync(User);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dicer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dicer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow fixed-top bgColor">
            <div class="container">
                <a class="navbar-brand ml-auto headTitle" asp-area="" asp-controller="Home" asp-action="Index">Dicer</a>
                <button class="navbar-toggler custom-toggler " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if(signInManager.IsSignedIn(User)){
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if(User.IsInRole("Client")){
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">My Job</a>
                        </li>
                        }
                        @if(User.IsInRole("Creator")){
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">My Campaign</a>
                        </li>
                        }
                    </ul>
                    }
                    @if (signInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <form method="post" asp-action="profile" asp-controller="Account">
                                    <button type="submit" class="nav-link btn btn-link text-white">
                                        @user.Name
                                    </button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <form id="logoutForm" class="form-inline" asp-action="Logout" asp-controller="Account">
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
                                </form>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="content">
            @RenderBody()
        </main>
    </div>

    <footer>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark border-top box-shadow bgColor">
            <div class="container">
                <div class="row">
                    <div class="footer-col">
                        <a class="navbar-brand ml-auto footTitle" asp-area="" asp-controller="Home" asp-action="Index">Dicer</a>
                        <br><span class="footSubTitle">Digital Creator Platform</span>
  	 		        </div>
                </div>
                <div class="row">
                    <div class="row justify-content-around">
                        <div class="footer-col col-md-3">
  	 			            <h4>Information</h4>
  	 			            <ul>
  	 				            <li><a href="#">about us</a></li>
  	 				            <li><a href="#">customer services</a></li>
  	 				            <li><a href="#">privacy policy</a></li>
  	 			            </ul>
  	 		            </div>
                        <div class="footer-col col-md-4">
  	 			            <h4>Follow us</h4>
  	 			            <div class="social-links">
  	 				            <a href="#"><i class="fab fa-twitter"></i></a>
  	 				            <a href="#"><i class="fab fa-instagram"></i></a>
  	 				            <a href="#"><i class="fab fa-linkedin-in"></i></a>
  	 			            </div>
  	 		            </div>
                    </div>
                    <div class="row">
                        <div class="row justify-content-center">
                            <div class="footer-col col-md-6">
                                <span class="footSubDescTitle">Dicer © All Rights Served</span>
                            </div>
                        </div> 
                        <div class="row justify-content-center">
                            <div class="footer-col col-md-12 footSubDesc">
                                <p>
                                     <span class="footIndent">Company: PT. Kita Bisa | Address: Jl. W.R. Supratman, Malang 65146, Indonesia</span><br>
                                     <span class="footDescIndent">Customer Sevice Number: 0869696969  | Email: DicerIndonesia@gmail.com</span> 
                                </p> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
